.panel-body
  = form_for @user, html: { class: 'form-horizontal' } do |f|
    = render partial: 'shared/errors', locals: { target: @user }
    .row
      .general-group.col-md-6
        %h3.text-center
          %strong= t('fields.en.general_fields')
        = render partial: 'form_general_fields', locals: { f: f }
      .en-group.col-md-6
        %h3.text-center
          %strong= t('fields.en.title')
        = f.fields_for :en_user_field do |ff|
          = render partial: 'form_different_languages_fields', locals: { f: ff, language: 'en' }
    .row
      .ua-group.col-md-6
        %h3.text-center
          %strong= t('fields.ua.title')
        = f.fields_for :ua_user_field do |ff|
          = render partial: 'form_different_languages_fields', locals: { f: ff, language: 'ua' }
      .ru-group.col-md-6
        %h3.text-center
          %strong= t('fields.ru.title')
        = f.fields_for :ru_user_field do |ff|
          = render partial: 'form_different_languages_fields', locals: { f: ff, language: 'ru' }
    .row
      .col-sm-6
        - if current_user&.admin?
          = link_to t('back'), new_contract_path, class: 'btn btn-primary btn-lg'
        - elsif current_user
          = link_to t('back'), user_path, class: 'btn btn-primary btn-lg'
        - else
          = link_to t('back'), root_path, class: 'btn btn-primary btn-lg'
      .col-sm-6
        - if sign_up_page?
          = f.submit t('sign_up'), class: 'pull-right btn btn-primary btn-lg'
        - else
          = f.submit t('save'), class: 'pull-right btn btn-primary btn-lg'
