= form_for @user do |f|
  = render 'shared/errors', object: @user

  .field
    = f.label :email
    %br/
    = f.email_field :email, required: true
  .field
    = f.label :password
    %br/
    = f.password_field :password, required: true
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, required: true
  .actions
    = f.submit 'Save'
