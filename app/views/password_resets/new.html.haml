.panel.panel-default
  .panel-heading
    %h4= t('reset_password.forgot_your_password')
  .panel-body
    = form_tag password_resets_path, method: :post do
      .form-group
        = label_tag :email
        = text_field_tag :email, '', autofocus: true, class: 'form-control'
      = submit_tag t('reset_password.send_me_reset_password_instructions'), class: 'btn btn-primary'
