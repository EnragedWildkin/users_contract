%tr
  %td.padding_top_11
    %p.bold Виконавець
    %p= "#{person_type_for_locale(@person_type, :ua)} #{@user.ua_user_field.full_name}"
    %br
    %p= "Адреса: #{@user.ua_user_field.address}"
    %br
    %p= "Ідентифікаційний номер: #{@user.taxpayer_id}"
    %br
    - if @person_type == "PE"
      %p= "Свідоцтво № #{@user.register_number}"
      %p= "Від #{locale_date(@user.register_number_start_date, "«%d» %B %Y", :ua)}"
    - else
      %p= "Паспорт номер: #{@user.passport_number}"
      %p= "Виданий #{@user.ua_user_field.passport_issued_by}"
    %br
    %p= "п/р № #{@user.ua_user_field.c_a_number}"
    %p= @user.ua_user_field.bank_name
    %p= "Адреса банку: #{@user.ua_user_field.bank_address}"
    %p= "Bank SWIFT Code #{@user.swift_code}"
    %p= "IBAN #{@user.iban_number}" if @user.iban_number.present?
    %br
    %br
    %p
      #{person_type_for_locale(@person_type, :ua)}__________________/
      #{@user.ua_user_field.name_with_initials}
    %br
  %td.padding_top_11
    %p.bold The Contractor
    %p= "#{person_type_for_locale(@person_type, :en)} #{@user.en_user_field.full_name}"
    %br
    %p= "Address: #{@user.en_user_field.address}"
    %br
    %p= "Taxpayer ID: #{@user.taxpayer_id}"
    %br
    - if @person_type == "PE"
      %p= "Register № #{@user.register_number}"
      %p= "As of #{locale_date(@user.register_number_start_date, "%B %d, %Y", :en)}"
    - else
      %p= "Passport number: #{@user.passport_number}"
      %p= "Issued by #{@user.en_user_field.passport_issued_by}"
    %br
    %p= "c/a № #{@user.en_user_field.c_a_number}"
    %p= @user.en_user_field.bank_name
    %p= "Bank Address: #{@user.ua_user_field.bank_address}"
    %p= "Bank SWIFT Code #{@user.swift_code}"
    %p= "IBAN #{@user.iban_number}" if @user.iban_number.present?
    %br
    %br
    %p
      #{person_type_for_locale(@person_type, :en)}__________________/
      #{@user.en_user_field.short_name}
    %br
